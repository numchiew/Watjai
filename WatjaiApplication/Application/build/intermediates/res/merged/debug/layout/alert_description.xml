<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_notreadlistnotification"
        android:scaleType="fitXY"
        android:id="@+id/readStatus" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="แจ้งเตือนการตรวจพบ"
        android:textColor="#343434"
        android:textSize="8pt"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvNotificationDescription"
        android:textSize="7pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="#525252"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="13dp"
        android:layout_toStartOf="@+id/tvTime" />

    <TextView
        android:text="*********"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="5pt"
        android:id="@+id/tvTime"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBottom="@+id/readStatus"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_overlay"
        />

</RelativeLayout>