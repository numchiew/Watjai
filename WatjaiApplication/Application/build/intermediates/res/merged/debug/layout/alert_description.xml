<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_listnotificationpng"
        android:scaleType="fitXY"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/shap_circle_status_read"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/readStatus"
        android:layout_above="@+id/tvNotificationDescription"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="แจ้งเตือนการตรวจพบ"
        android:textColor="#343434"
        android:textSize="8pt"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvNotificationDescription"
        android:textSize="6pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="#525252"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="13dp"
        android:layout_toStartOf="@+id/tvTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="5pt"
        android:id="@+id/tvTime"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/readStatus"
        android:layout_marginStart="27dp" />

</RelativeLayout>