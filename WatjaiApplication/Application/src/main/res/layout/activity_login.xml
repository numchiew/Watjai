<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bluetoothlegatt.Activity.LoginActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login"
            android:scaleType="centerCrop" />

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:weightSum="5">

                <ImageView
                    android:layout_width="292.5dp"
                    android:layout_height="278dp"
                    android:src="@drawable/logo"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/edtMenuMobile"
                    android:background="@drawable/bg_user_input"
                    android:layout_width="match_parent"
                    android:layout_height="54.5dp"
                    android:hint="@string/hint_user"
                    android:singleLine="true"
                    android:paddingTop="16dp"
                    android:imeOptions="actionNext"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edtMenuPassword"
                    android:background="@drawable/bg_pass_input"
                    android:layout_width="match_parent"
                    android:layout_height="54.5dp"
                    android:inputType="textPassword"
                    android:paddingTop="16dp"
                    android:singleLine="true"
                    android:hint="@string/hint_pass"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/btnLogin"
                    android:background="@drawable/btn_login"
                    android:text="@string/btn_login"
                    android:textColor="#4f4f4f"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="54.5dp"/>

            </LinearLayout>
        </ScrollView>




</RelativeLayout>
